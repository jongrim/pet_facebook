{{> nav}}
<div class="container">
  <div class="row">

    {{!-- Sidebar --}} 
    <div class="col-md-3 d-flex flex-column align-items-center">
      <div class="hidden-sm-down">
        {{#each Photo}}
          {{#unless this.isPet}}
            {{#if this.default_Pic}}
              <img src={{this.img_url}} alt="Profile photo" class="img-thumbnail">
            {{/if}}
          {{/unless}}
        {{/each}} 
      </div>
      <div class="card-text hidden-sm-down">
        {{user.first_name}} {{user.last_name}}
      </div>
      <div class="card-text hidden-sm-down">
        {{#unless user.about}}
          Click Edit Profile to add an About Me Section 
        {{else}}
          {{user.about}}
        {{/unless}}
        {{#each Photo.dataValues}}
            <option value={{this.id}}>{{this}}</option>
          {{/each}}
      </div>
      <hr>
      {{#if enableEdit}}
      <div class="btn-group-vertical">
        <a class="btn btn-primary" href="/updateProfile">Edit Profile</a>
        <a class="btn btn-primary" href="/pets">Add New Pet</a>
        <a class="btn btn-primary" href="/photos">Edit/Add photos</a>
      </div>
      {{/if}}
    </div>
    

    <div class="col-6">

      <div class="card mb-3 bg-light">
        <div class="card-block d-flex flex-column align-items-center">
          <h4 class="card-title mt-1">Pets</h4>
          <div class="d-flex justify-content-around align-items-start mb-3">
            {{#each Photo}}
              {{#if this.isPet}}
                {{#if this.default_Pic}}
                <div class="card" style="width:33%">
                  <img src={{this.img_url}} alt="" class="card-img-top">
                  <h5 class="card-title text-center mt-1">{{Pet}}</h5>
                </div>
                {{/if}}
              {{/if}}
            {{/each}}              
          </div>
        </div>
      </div>

      <div class="card mb-3 bg-light">
        <div class="card-block d-flex flex-column align-items-center">
          <h4 class="card-title mt-1">Photos</h4>
          <div class="d-flex justify-content-around align-items-start mb-3">
            {{#each Photo}}
              {{#if this.isPet}}
                <div class="card" style="width:33%">
                  <img src={{this.img_url}} alt="" class="card-img-top">
                </div>
              {{/if}}
            {{/each}} 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
