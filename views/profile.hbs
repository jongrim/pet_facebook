{{> nav}}
<div class="container">
  <div class="page-header text-center">
    <h1>Profile Page</h1>
    <a href="/logout" class="btn btn-default btn-small">Logout</a>
  </div>
  <div class="row">
    <div class="col-6">
      <div class="well">
        <div class="col s12 m6">
          {{#each ProfilePic}}
          <img src={{this.img_url}} alt="User ID to COME" style="width:15vh;"> {{/each}}
        </div>
        <h3><span class="fa fa-user"></span> {{user.email}}</h3>
        <p><strong>id:</strong> {{user.id}}</p>
        <p><strong>email:</strong> {{user.email}}</p>
        <p><strong>password:</strong> {{user.password}}</p>
        <form action="/photos" method="get">
          <button name="photos" type="submit" class="btn btn-warning btn-lg">Upload Pet Photo</button>
        </form>
        <form action="/posts" method="get">
          <button name="posts" type="submit" class="btn btn-warning btn-lg">See Posts</button>
        </form>
      </div>
    </div>
  </div class="offset-6 col-7">
  <div class="form-group">
    <form id="submitPost" action="/posts" method="post">
      <label for="body">Body:</label>
      <textarea name="postBody" placeholder="Post Body" class="form-control" rows="10" id="body"></textarea>
      {{!-- I would like the to add a drop down list for all the pets of that user  --}}
      {{!-- <div class="form-group">
        <label for="category">Select Pet:</label>
        <select class="form-control" id="pet">
  		  </select>
      </div> --}}
      <br />
      <button type="submit" name="button" value="submit" class="btn btn-warning submit">Submit Post</button>
    </form>
  </div>
</div>
</div>
</div>